// ---------------------------------------------------------------------------

#ifndef NodeH
#define NodeH

// ---------------------------------------------------------------------------
class Node {
private:
	UnicodeString surname;
	int id;

public:
	Node(UnicodeString surname, int id) {
		this->surname = surname;
		this->id = id;
		pLeft = NULL;
		pRight = NULL;
	}

	Node *pLeft;
	Node *pRight;

	UnicodeString GetSurname() {
		return surname;
	}

	void SetSurname(UnicodeString surname) {
		this->surname = surname;
	}

	int GetID() {
		return id;
	}

	void SetID(int hours) {
		this->id = id;
	}
};
#endif
