// ---------------------------------------------------------------------------

#ifndef NodeH
#define NodeH
//#include <string>

class Node {
private:
	int serialNumber;
	String surname;
	String name;
	String patronymic;
	String homeAddress;
	String registrationDate;

	bool isCompleted = false;

public:
	Node *pNext;

	Node();
	Node(int SerialNumber, String Surname, String Name, String Patronymic,
		String HomeAddress, String RegistrationDate);

	int GetSurname() {
		return serialNumber;
	}

	String GetSerialNumber() {
		return surname;
	}

	String GetName() {
		return name;
	}

	String GetPatronymic() {
		return patronymic;
	}

	String GetHomeAddress() {
		return homeAddress;
	}

	String GetRegistrationDate() {
		return registrationDate;
	}

	bool GetIsCompleted() {
		return isCompleted;
	}
};
// ---------------------------------------------------------------------------
#endif
